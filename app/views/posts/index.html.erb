<!-- app/views/application/list_posts.html.erb turn into index-->

<div class="posts">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <% @posts.each do |post| %>
        <div class="post">

          <h2 class="title">
            <%= link_to post.title, post_path(post.id) %>
          </h2>

          <small class="meta">
            <span class="author">by <%= post.author %> -</span>
            <em class="created_at"><%= post.created_at %></em>
          </small>

        <!-- link to edit post -->
          <%= link_to "edit",edit_post_path(post.id) %> 

        <!-- link to DELETE post -->
          <!-- <form method="post" action="/posts/<%= post.id %>" style='display: inline'>
            <input name= "_method" type="hidden" value="delete">
           <input type="submit" value="Delete" /> 
          </form> -->
          <%= form_tag post_path(post.id), method: "delete" do %>
            <%= submit_tag "delete" %>
          <% end %>
        </div>
        <hr />
      <% end %> <!--end of iteration of @posts-->
      <!-- link to new post -->
    <!-- <a href="<%= new_post_path %>">New Post</a> -->
    <!-- is the same as using helpers-->
    <%= link_to 'New post', new_post_path %>
</div>